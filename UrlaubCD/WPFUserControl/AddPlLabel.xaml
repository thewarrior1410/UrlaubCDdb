<UserControl x:Class="UrlaubCD.WPFUserControl.AddPlLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UrlaubCD.WPFUserControl"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="200">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        
        
        <DockPanel Grid.Column="0">
            <Label>Playlist:</Label>
            <TextBox x:Name="pl_inp" Margin="5" Text="{Binding Add_Pl}"></TextBox>
        </DockPanel>

        <Button x:Name="add_Button" Grid.Column="1">ADD</Button>

    </Grid>
</UserControl>
